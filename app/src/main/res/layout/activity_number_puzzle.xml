<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1976D2"
    tools:context=".Number_Puzzle">

    <LinearLayout
        android:id="@+id/case1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_6sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:layout_constraintStart_toStartOf="parent" />

            <Chronometer
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:gravity="center"
                android:textColor="#1976D2"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/back"
                app:layout_constraintRight_toLeftOf="@id/count" />

            <TextView
                android:id="@+id/count"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0"
                android:textColor="#1976D2"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/timer"
                app:layout_constraintRight_toLeftOf="@id/settings" />

            <ImageView
                android:id="@+id/settings"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_6sdp"
                android:src="@drawable/ic_baseline_settings_24"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/case1">

        <GridLayout
            android:id="@+id/container"
            android:layout_gravity="center"
            android:background="@color/white"
            android:padding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_width="match_parent"
            android:layout_height="500dp"
        >

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:onClick="OnClik"
                android:tag="00"
                android:textSize="18sp"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:onClick="OnClik"
                android:tag="01"
                android:textSize="18sp"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:onClick="OnClik"
                android:tag="02"
                android:textSize="18sp"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:onClick="OnClik"
                android:tag="03"
                android:textSize="18sp"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:onClick="OnClik"
                android:tag="10"
                android:textSize="18sp"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:onClick="OnClik"
                android:tag="11"
                android:textSize="18sp"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:onClick="OnClik"
                android:tag="12"
                android:textSize="18sp"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:onClick="OnClik"
                android:tag="13"
                android:textSize="18sp"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:onClick="OnClik"
                android:tag="20"
                android:textSize="18sp"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:id="@+id/btn10"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:onClick="OnClik"
                android:tag="21"
                android:textSize="18sp"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:id="@+id/btn11"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:onClick="OnClik"
                android:tag="22"
                android:textSize="18sp"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:id="@+id/btn12"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:onClick="OnClik"
                android:tag="23"
                android:textSize="18sp"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:id="@+id/btn13"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:onClick="OnClik"
                android:tag="30"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn14"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:onClick="OnClik"
                android:tag="31"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn15"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:onClick="OnClik"
                android:tag="32"
                android:textSize="18sp"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:id="@+id/btn16"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:onClick="OnClik"
                android:tag="33"
                android:textSize="18sp"
                tools:ignore="UsingOnClickInXml" />
        </GridLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>