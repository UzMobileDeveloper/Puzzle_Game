<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#1976D2"
    android:id="@+id/selection"
    android:layout_height="match_parent"
    tools:context=".Selection_Game">
<TextView
    android:layout_width="match_parent"
    android:textColor="@color/white"
    android:textStyle="bold"
    android:layout_marginTop="@dimen/_20sdp"
    android:textSize="@dimen/_22sdp"
    android:id="@+id/text"
    android:gravity="center"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    android:text="@string/select_your_lovely_game"
    />
<LinearLayout
    app:layout_constraintTop_toBottomOf="@id/text"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="0dp">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_110sdp">
        <TextView
            android:id="@+id/number_Puzzle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#1976D2"
            android:text="Number Puzzle"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_width="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="@dimen/_110sdp">
        <TextView
            android:id="@+id/image_Puzzle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#1976D2"
            android:text="Image Puzzle"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_width="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="@dimen/_110sdp">
        <TextView
            android:id="@+id/slide_Puzzle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#1976D2"
            android:text="Slide Puzzle"/>

    </androidx.cardview.widget.CardView>
</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>